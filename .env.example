# ============================================
# School ERP System - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_erp
DB_USER=erp_user
DB_PASSWORD=erp_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT Authentication
# ============================================
# Generate a strong secret key for production!
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# API Gateway
# ============================================
API_GATEWAY_PORT=3000
API_GATEWAY_URL=http://localhost:3000

# ============================================
# Microservice Ports
# ============================================
AUTH_SERVICE_PORT=3001
STUDENT_SERVICE_PORT=3002
FEES_SERVICE_PORT=3003
ATTENDANCE_SERVICE_PORT=3004
EXAM_SERVICE_PORT=3005

# ============================================
# ERPNext Integration (Optional)
# ============================================
# Leave these empty if not using ERPNext
# The system works independently without ERPNext
ERPNEXT_URL=http://localhost:8000
ERPNEXT_API_KEY=
ERPNEXT_API_SECRET=

# ============================================
# RabbitMQ (Optional - for async processing)
# ============================================
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123

# ============================================
# Environment
# ============================================
NODE_ENV=development

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
