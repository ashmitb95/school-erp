{
  "name": "school-erp-system",
  "version": "1.0.0",
  "description": "All-in-one ERP system for chain of schools in India",
  "main": "index.js",
  "scripts": {
    "dev": "cd services && npm run dev",
    "dev:server": "cd services && npm run dev",
    "dev:microservices": "concurrently \"npm:dev:*\"",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:auth": "cd services/auth && npm run dev",
    "dev:student": "cd services/student && npm run dev",
    "dev:fees": "cd services/fees && npm run dev",
    "dev:attendance": "cd services/attendance && npm run dev",
    "dev:exam": "cd services/exam && npm run dev",
    "build": "cd shared && npm run build && cd ../services && npm run build",
    "migrate": "npm run migrate:check && ts-node --transpile-only shared/database/migrate.ts",
    "migrate:check": "echo 'üîç Checking TypeScript compilation...' && npx tsc --noEmit --skipLibCheck shared/database/config.ts shared/database/models/*.ts 2>&1 && echo '‚úÖ TypeScript compilation successful!' || (echo '‚ùå TypeScript compilation failed! Fix errors before running migrations.' && exit 1)",
    "seed": "ts-node --transpile-only scripts/seed-database.ts",
    "seed:metrics": "ts-node --transpile-only scripts/seed-today-metrics.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js"
  },
  "workspaces": [
    "services",
    "shared"
  ],
  "keywords": [
    "erp",
    "school-management",
    "education",
    "india"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.11",
    "sequelize": "^6.35.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}

