{
  "name": "school-erp-system",
  "version": "1.0.0",
  "description": "All-in-one ERP system for chain of schools in India",
  "main": "index.js",
  "scripts": {
    "cleanup": "for port in 3000 3001 3002 3003 3004 3005 3006 3007; do lsof -ti:$port | xargs kill -9 2>/dev/null || true; done && echo '‚úÖ Ports 3000-3007 cleaned up'",
    "dev": "npm run cleanup && concurrently \"npm:dev:*\"",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:auth": "cd services/auth && npm run dev",
    "dev:student": "cd services/student && npm run dev",
    "dev:fees": "cd services/fees && npm run dev",
    "dev:attendance": "cd services/attendance && npm run dev",
    "dev:exam": "cd services/exam && npm run dev",
    "dev:ai": "cd services/ai && npm run dev",
    "dev:management": "cd services/management && npm run dev",
    "build": "npm run build --workspaces",
    "migrate": "npm run migrate:check && ts-node --transpile-only shared/database/migrate.ts",
    "migrate:check": "echo 'üîç Checking TypeScript compilation...' && npx tsc --noEmit --skipLibCheck shared/database/config.ts shared/database/models/*.ts 2>&1 && echo '‚úÖ TypeScript compilation successful!' || (echo '‚ùå TypeScript compilation failed! Fix errors before running migrations.' && exit 1)",
    "seed": "ts-node --project tsconfig.json --transpile-only scripts/seed-database.ts",
    "backfill": "ts-node --project tsconfig.json --transpile-only scripts/backfill-historical-data.ts",
    "add-geodata": "ts-node --project tsconfig.json --transpile-only scripts/add-geodata-columns.ts",
    "create-calendar-table": "ts-node --project tsconfig.json --transpile-only scripts/create-calendar-events-table.ts",
    "add-leave-type": "ts-node --project tsconfig.json --transpile-only scripts/add-leave-type-column.ts",
    "add-section-status": "ts-node --project tsconfig.json --transpile-only scripts/add-section-and-exam-status.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js"
  },
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "keywords": [
    "erp",
    "school-management",
    "education",
    "india"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.11",
    "sequelize": "^6.35.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
